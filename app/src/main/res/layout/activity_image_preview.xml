<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ImagePreviewActivity">


    <TextView
        android:id="@+id/tv_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="服务商不管惕。 "
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.mao.kotlinjetpack.test_fun.MySpannableTextView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="服务商不管以任何形式要求线下交易，都存在诈骗的风险，请提高警都存在诈骗的风险，请都存在诈骗的风险，请都存在诈骗的风险，请都存在诈骗的风险，请都存在诈骗的风险，请惕。" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher" />


    </LinearLayout>


    <!--122， 123 124  125   126 不行-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="126dp"
        android:layout_marginEnd="27dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="中国中国中国中国中国中国中国中国中国中国中国中国中国" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="Top2"
                android:textColor="@color/design_default_color_error"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/ic_launcher" />


        </LinearLayout>

    </RelativeLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:paddingBottom="12dp"
        tools:visibility="visible">


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="15.5dp"
            android:layout_marginBottom="2dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/llMovieScoreDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ivLogo"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvScoreDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="290.7万"
                android:textColor="@color/teal_200"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWishDescDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="人想看"
                android:textColor="@color/teal_200"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMovieScoreDownDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/llMovieScoreDown"
            app:layout_constraintEnd_toStartOf="@+id/llTopArrow"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/llMovieScoreDown"
            app:layout_constraintTop_toTopOf="@id/llMovieScoreDown"
            tools:visibility="visible">



            <ImageView
                android:id="@+id/ivMovieScoreDown"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="38dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvMovieScoreDescDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="近期近期近期近期"
                android:textColor="@color/teal_200"
                android:textSize="13sp"
                android:textStyle="bold" />

          <!--  <com.mao.kotlinjetpack.test_fun.AdjustTextView
                android:id="@+id/tvMovieScoreDescDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="2020年近期近期近期近期"
                android:textColor="@color/teal_200"
                android:textSize="13sp"
                android:textStyle="bold" />
-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTopArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/llMovieScoreDown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toTopOf="@id/llMovieScoreDown"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvMovieScoreDescDownTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Top2"
                android:textColor="@color/design_default_color_error"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivArrowDown"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>